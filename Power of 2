class Solution{
    public:
    // Function to check if given number n is a power of two.
    bool isPowerofTwo(long long n){
        
       long long a=2;
       if (n==1)
       {
           return true;
       }
       while(a<=n)
       {
           if(a==n)
           {
               return true;
           }
           a=a*2;
       }
       return false;
        
    }
};
